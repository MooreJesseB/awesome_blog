<!-- _post.html.erb -->

<%= form_for ([user, post_form]) do |f| %>
<div class="field">
  <div class="ui left labeled input">
  	<%= f.text_field :title, placeholder: "Title" %>
    <div class="ui corner label">
      <i class="icon asterisk"></i>
    </div>
  </div>
</div>
<div class="field">
	<%= f.text_area :content, placeholder: "Post content..." %>
  <div class="ui corner label">
    <i class="icon asterisk"></i>
  </div>
</div>
<div class="ui left labeled input">
  <%= text_field_tag :tags, nil, placeholder: "Tag" %>
  <div class="ui corner label">
    <i class="icon asterisk"></i>
  </div>
</div>
<%= f.submit button_label, :class => "ui green button update" %>
<% end %>