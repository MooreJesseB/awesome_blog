<!-- show.html.erb -->
<%= render partial: "shared/partial_sidebar" %>


<div class="ui vertically divided page grid right">
  <div class="one column row">
    <h2 class="ui header"><%=@post.title %></h2>
    <h5 class="ui header"><%=@post.created_at.to_formatted_s(:long) %></h5>
  </div>
  <div class="one column row">
    <div class="column">
      <p><%=@post.content %></p>

        <p><%= link_to "Update This?",edit_user_post_path, class: "ui blue button" %></p>

    </div>
  </div>
  <div class="two column row">
    <div class="column">
        <div class="ui piled blue segment">
          <h2 class="ui header">
            <i class="icon inverted circular blue comment"></i> Comments
          </h2>
          <% @comments.each do |comment| %>

          <div class="ui comments">
            <div class="comment">
              <% if @comments.length > 0 %>
                   <a class="avatar">
                <%= image_tag "icon_1500.png" %>
              </a>
              <% end %>
              <div class="content">
                <h3 class="ui title"><%= comment.title %></h3>
                <div class="metadata">
                  <span class="date"><%= comment.created_at.to_formatted_s(:long) %></span>
                </div>
                <div class="text">
                  <%= comment.body %>
                </div>
                <div class="actions">
                  <a class="reply">Reply</a>
                  <%=link_to "Delete",user_post_comment_path(@user, @post, comment) ,method: :delete, class:"delete"%> 
                  <!-- <a class="delete">Delete</a> -->
                  <a class="edit">Edit</a>
                </div>
              </div>
            </div>
            <% end %>
            <form class="ui reply form">
              <div class="field">
                <input type="text" placeholder="Title">
              </div>
              <div class="field">
                <textarea placeholder="Write something here..."></textarea>
              </div>
              <div class="ui fluid blue labeled submit icon button">
                <i class="icon edit"></i> Add Comment
              </div>
            </form>
          </div>
        </div>
      </div>
    <div class="column"></div>
  </div>