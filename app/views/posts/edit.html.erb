<!-- edit.html.erb -->
<%= render partial: "shared/partial_sidebar" %>

<div class="ui vertically divided page grid right">
  <div class="one column row">
    <div class="left floated twelve wide column">
      <h2>Edit Post</h2>
    </div><!-- /.column -->
  </div><!-- /.row -->
  <div class="one column row">
    <div class="left floated twelve wide column">
      <!-- when using post form, drop it into a div class="post-form" -->
      <!--to pick up appropriate styles -->
      <div class="post-form">
      <%= render partial: "shared/post_form", object: @post, locals: {user: @user, button_label: "Update post"} %>
      <div class="field space-above">
        <%= button_to "Delete Post", user_post_path(@user, @post), method: :delete, class: "ui red button delete" %>
      </div>
      </div>
    </div><!-- /.column -->
  </div><!-- /.row -->
</div><!-- /.grid -->