
<div class="row"><h2 class="ui header right">Users Index</h2> </div>

<!-- display all users in an ugly table -->
<% @users.each do |user| %>
	<table>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>email</th>
			<th>Show User</th>
		</tr>
		<tr>
			<td><%= user.first_name  %></td>
			<td><%= user.last_name  %></td>
			<td><%= user.email %></td>
			<td><a href="<%=user.id %>">Show</a></td>
		</tr>

	</table>

<% end %>




